@model ChangePasswordViewModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<form asp-route="Update" class="fill__form margin__top">
    <input type="hidden" asp-for="ReturnUrl" />
    <h4>Change your Password</h4>
    <p>Please enter your new password below:</p>
    <div class="formrow fill cf">
        <label>New Password<em>*</em></label>
        <input type="password" asp-for="Password" class="alt" maxlength="30" autocomplete="off" autofocus />
        <span asp-validation-for="Password" class="validate-error-row"></span>
    </div>
    <div class="formrow fill cf">
        <label>Confirm New Password<em>*</em></label>
        <input type="password" asp-for="ConfirmPassword" class="alt" maxlength="30" autocomplete="off" />
        <span asp-validation-for="ConfirmPassword" class="validate-error-row"></span>
    </div>
    <button class="btn btn__standard margin__top margin__bottom" name="button" value="update">Change Password</button>
    <div class="align__right">
        <a href="@Model.ReturnUrl" class="link">Cancel</a>
    </div>
</form>